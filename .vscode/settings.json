{
    // Generic settings :
    "editor.formatOnSave": true, // Format files on save
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit" // Organize imports on save
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter", // Use Black formatter for Python
    },
    "black-formatter.args": [
        "--line-length",
        "100",
        "--preview"
    ],
    "isort.args": [
        "--profile",
        "black",
        "--lines-after-imports",
        "2"
    ],
    "ruff.organizeImports": false,
    "python.analysis.typeCheckingMode": "basic", // Use basic type checking for Python
